	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="EmployeeDetailForm"
			editable="false"
			layout="ResponsiveGridLayout"
			
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="false" >
			<f:content>
				<core:Title text="Employee Details" />
				<Label text="Employee Name" />
				<Text text="{FirstName} {LastName}" />
				<Label text="Employee Number" />
				<Text id="EmployeeNumberTxtVal" text="{EmployeeNumber}" />
				<Label text="Directorate" />
				<Text text="{Directorate}" />
				<Label text="Department" />
				<Text text="{Department}" />
				<Label text="Gender" />
				<Text text="{Gender}" />
				<Label text="Age Category" />
				<Text text="{Age}" />
				<core:Title text="Employee Contact Details" />
				<Label text="Phone" />
				<Text text="{Phone}" />
				<Label text="Cell" />
				<Text text="{Cell}" />
				<Label text="Email" />
				<Text text="{Email}" />
			</f:content>
		</f:SimpleForm>
	</VBox>
