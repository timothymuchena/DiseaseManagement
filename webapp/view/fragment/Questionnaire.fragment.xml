<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns="sap.m">
	<sap.ui.layout.form:SimpleForm adjustLabelSpan="true" columnsL="1" columnsM="1" columnsXL="2" editable="true" emptySpanL="4" emptySpanM="0"
		emptySpanS="0" emptySpanXL="0" id="FormQuestionnaire" labelSpanL="3" labelSpanM="4" labelSpanS="12" labelSpanXL="4"
		layout="ResponsiveGridLayout" singleContainerFullSize="true" xmlns:sap.ui.layout.form="sap.ui.layout.form">
		<sap.ui.layout.form:content>
			<Label required="true" text="{i18n>OutdoorEvent}" wrapping="true"/>
			<Select forceSelection="false" id="selectCheckIndoorOutDoor" selectedKey="{ViewModel>/PreCheckIndoorOutDoorSelectedIndex}" change="onSelectCheckIndoorOutDoor" enabled="{ViewModel>/isEnabled}">
				<!--<core:Item key="00" text=""/>-->
				<core:Item key="01" text="Indoor"/>
				<core:Item key="02" text="Outdoor"/>
				<core:Item key="03" text="Indoor and Outdoor"/>
			</Select>
			<Label required="true" text="{i18n>TemporaryStructures}" wrapping="true"/>
			<RadioButtonGroup columns="2" editable="{ViewModel>/isEditable}" id="radioBtnGrpCheckTempStructures" select="onTemporaryStructures"
				selectedIndex="{ViewModel>/PreCheckTempStructuresIndex}" enabled="{ViewModel>/isEnabled}">
				<buttons>
					<RadioButton text="Yes"/>
					<RadioButton text="No"/>
				</buttons>
			</RadioButtonGroup>
			<Label required="true" text="{i18n>StagesErected}" wrapping="true"/>
			<RadioButtonGroup columns="2" editable="{ViewModel>/isEditable}" id="radioBtnGrpCheckStages" select="onStagesErected"
				selectedIndex="{ViewModel>/PreCheckStagesIndex}" enabled="{ViewModel>/isEnabled}">
				<buttons>
					<RadioButton text="Yes"/>
					<RadioButton text="No"/>
				</buttons>
			</RadioButtonGroup>
			<Label required="true" text="{i18n>Marquees}" wrapping="true"/>
			<RadioButtonGroup columns="2" editable="{ViewModel>/isEditable}" id="radioBtnGrpCheckMarquee" select="onMarquees"
				selectedIndex="{ViewModel>/PreCheckMarqueeIndex}" enabled="{ViewModel>/isEnabled}">
				<buttons>
					<RadioButton text="Yes"/>
					<RadioButton text="No"/>
				</buttons>
			</RadioButtonGroup>
			<Label required="true" text="{i18n>Scaffolding}" wrapping="true"/>
			<RadioButtonGroup columns="2" editable="{ViewModel>/isEditable}" id="radioBtnGrpCheckScaffold" select="onScaffolding"
				selectedIndex="{ViewModel>/PreCheckScaffoldIndex}" enabled="{ViewModel>/isEnabled}">
				<buttons>
					<RadioButton text="Yes"/>
					<RadioButton text="No"/>
				</buttons>
			</RadioButtonGroup>
			<Label required="true" text="{i18n>Pegs}" wrapping="true"/>
			<RadioButtonGroup columns="2" editable="{ViewModel>/isEditable}" id="radioBtnGrpCheckPegs" select="onPegs"
				selectedIndex="{ViewModel>/PreCheckPegsIndex}" enabled="{ViewModel>/isEnabled}">
				<buttons>
					<RadioButton text="Yes"/>
					<RadioButton text="No"/>
				</buttons>
			</RadioButtonGroup>
			<Label required="{ViewModel>/isPBDMRequired}" text="{i18n>CaseNumber}" visible="{ViewModel>/isPBDMRequired}" wrapping="true"/>
			<Input editable="{ViewModel>/isEditable}" id="txtPBDM" change="onValidatePBDM" required="{ViewModel>/isPBDMRequired}"
				value="{Header>/ZbdmCrmrefno}" valueLiveUpdate="true" visible="{ViewModel>/isPBDMRequired}" enabled="{ViewModel>/isEnabled}"/>
			<Label required="true" text="{i18n>Branding}" wrapping="true"/>
			<RadioButtonGroup columns="2" editable="{ViewModel>/isEditable}" id="radioBtnGrpCheckBranding" select="onBrandingHandler"
				selectedIndex="{ViewModel>/PreCheckBrandingIndex}" enabled="{ViewModel>/isEnabled}">
				<buttons>
					<RadioButton text="Yes"/>
					<RadioButton text="No"/>
				</buttons>
			</RadioButtonGroup>
			<Label required="false" text="{i18n>eSignageNumber}" visible="{ViewModel>/isSignageRequired}" wrapping="true"/>
			<Input editable="{ViewModel>/isEditable}" id="txtSignage"  required="false" value="{Header>/ZesnCrmrefno}"
				valueLiveUpdate="true" visible="{ViewModel>/isSignageRequired}" enabled="{ViewModel>/isEnabled}" change="onValidateSignage"/>
			<Label required="true" text="{i18n>Drones}" wrapping="true"/>
			<RadioButtonGroup columns="2" editable="{ViewModel>/isEditable}" id="radioBtnGrpCheckDrones" select="onDrones"
				selectedIndex="{ViewModel>/PreCheckDronesIndex}" enabled="{ViewModel>/isEnabled}">
				<buttons>
					<RadioButton text="Yes"/>
					<RadioButton text="No"/>
				</buttons>
			</RadioButtonGroup>
			<Label required="true" text="{i18n>Cranes}" wrapping="true"/>
			<RadioButtonGroup columns="2" editable="{ViewModel>/isEditable}" id="radioBtnGrpCheckCranes" select="onCranes"
				selectedIndex="{ViewModel>/PreCheckCranesIndex}" enabled="{ViewModel>/isEnabled}">
				<buttons>
					<RadioButton text="Yes"/>
					<RadioButton text="No"/>
				</buttons>
			</RadioButtonGroup>
			<Label required="true" text="{i18n>Zoning}" wrapping="true"/>
			<RadioButtonGroup columns="2" editable="{ViewModel>/isEditable}" id="radioBtnGrpCheckZoning" select="onZoningHandler"
				selectedIndex="{ViewModel>/PreCheckZoningIndex}" enabled="{ViewModel>/isEnabled}">
				<buttons>
					<RadioButton text="Yes"/>
					<RadioButton text="No"/>
				</buttons>
			</RadioButtonGroup>
			<Label required="true" text="{i18n>DisasterRiskManagement}" wrapping="true"/>
			<RadioButtonGroup columns="2" id="radioBtnDisasterRiskManagement" select="onDisasterRiskManagement" selectedIndex="{ViewModel>/DisasterRiskManagementIndex}" enabled="{ViewModel>/isEnabled}">
				<buttons>
					<RadioButton text="Yes"/>
					<RadioButton text="No"/>
				</buttons>
			</RadioButtonGroup>
		</sap.ui.layout.form:content>
	</sap.ui.layout.form:SimpleForm>
</core:FragmentDefinition>