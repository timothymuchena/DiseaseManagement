<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:Form id="ClinicalExaminationForm" editable="true">
			<!--<f:title>-->
			<!--	<core:Title text="Clinical Examination (Physical)"/>-->
			<!--</f:title>-->
			<f:layout>
				<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4"
					emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="Weight">
							<f:fields>
								<Input value="{Weight}" id="Weight"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Length">
							<f:fields>
								<Input value="{Length}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="BMI">
							<f:fields>
								<Input value="{Bmi}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Blood Pressure">
							<f:fields>
								<Input value="{BloodPressure}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Blood Glucose">
							<f:fields>
								<Input value="{BloodGlucose}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Heart Rate">
							<f:fields>
								<Input value="{HeartRate}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Body Temperature">
							<f:fields>
								<Input value="{BodyTemperature}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Respiratory Rate">
							<f:fields>
								<Input value="{RespiratoryRate}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Pregnancy Test">
							<f:fields>
								<Input value="{PregnancyTest}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Urine Dipstick">
							<f:fields>
								<Input value="{UrineDipstick}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Finger Prick HB">
							<f:fields>
								<Input value="{FingerPrickHB}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Substance Test: Other">
							<f:fields>
								<Input value="{OtherSubstanceTest}"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>